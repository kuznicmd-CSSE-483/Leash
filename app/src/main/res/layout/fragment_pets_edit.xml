<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Foxtrot"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/pet_edit_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:text="Pet"
            android:textAlignment="center"
            android:textColor="@color/Golf"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/pet_edit_image"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:layout_below="@id/pet_edit_header"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_baseline_pets_24"
            android:contentDescription="@string/pet_image_description" />

        <Button
            android:id="@+id/pet_edit_upload_photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_edit_image"
            android:layout_centerHorizontal="true"
            android:text="@string/upload_photo" />

        <EditText
            android:id="@+id/name_edit_editText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_edit_upload_photo_button"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/Hotel"
            android:fontFamily="@font/open_sans_light"
            android:hint="@string/pets_edit_name_hint"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textColorHint="@color/Bravo" />

        <TextView
            android:id="@+id/name_edit_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_edit_editText"
            android:layout_alignLeft="@id/name_edit_editText"
            android:text="@string/pets_edit_name"
            android:textColor="@color/Hotel"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/birthdate_edit_editText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_edit_textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/Hotel"
            android:focusable="false"
            android:fontFamily="@font/open_sans_light"
            android:hint="@string/pets_edit_birthdate_hint"
            android:importantForAutofill="no"
            android:inputType="none"
            android:textColorHint="@color/Bravo" />

        <TextView
            android:id="@+id/birthdate_edit_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/birthdate_edit_editText"
            android:layout_alignLeft="@id/birthdate_edit_editText"
            android:text="@string/pets_edit_birthdate"
            android:textColor="@color/Hotel"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/pet_type_edit_editText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/birthdate_edit_textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/Hotel"
            android:fontFamily="@font/open_sans_light"
            android:hint="@string/pets_edit_pet_type_hint"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textColorHint="@color/Bravo" />

        <TextView
            android:id="@+id/pet_type_edit_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_type_edit_editText"
            android:layout_alignLeft="@id/pet_type_edit_editText"
            android:text="@string/pets_edit_pet_type"
            android:textColor="@color/Hotel"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/save_pet_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_type_edit_textView"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/Golf"
            android:text="@string/pets_edit_save_button"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/delete_pet_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_type_edit_textView"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/Golf"
            android:text="@string/pets_edit_delete_button"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- Series of Paw Print Icons for Decoration -->
        <ImageView
            android:id="@+id/paw_icon1"
            style="@style/pawPrints"
            android:layout_alignRight="@id/pet_edit_header"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:rotation="185"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/paw_icon2"
            style="@style/pawPrints"
            android:layout_alignRight="@id/pet_edit_header"
            android:layout_marginTop="30dp"
            android:layout_marginRight="60dp"
            android:rotation="215"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/paw_icon3"
            style="@style/pawPrints"
            android:layout_alignRight="@id/pet_edit_header"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:rotation="195"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/paw_icon4"
            style="@style/pawPrints"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="15dp"
            android:rotation="5"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/paw_icon5"
            style="@style/pawPrints"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="30dp"
            android:rotation="35"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/paw_icon6"
            style="@style/pawPrints"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="60dp"
            android:rotation="15"
            app:tint="@color/black" />

    </RelativeLayout>
</ScrollView>