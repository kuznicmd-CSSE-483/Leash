<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Leash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Charlie</item>
        <item name="colorPrimaryVariant">@color/India</item>
        <item name="colorOnPrimary">@color/Foxtrot</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Font for the Application -->
        <item name="android:fontFamily">@font/bebas_neue</item>
        <item name="fontFamily">@font/bebas_neue</item>
    </style>

    <!--  Paw Prints Icons used on Pet Screen -->
    <style name="pawPrints">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:src">@drawable/ic_baseline_pets_24</item>
        <item name="contentDescription">Paw Print</item>
    </style>


</resources>